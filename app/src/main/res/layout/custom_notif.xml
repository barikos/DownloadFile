<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlay_custom_not"
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_notify_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_file_download_white_18dp"
        android:layout_marginTop="@dimen/img_notify_margin"
        android:layout_marginLeft="@dimen/img_notify_margin"/>
    <TextView
        android:id="@+id/txt_notify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="File had been downloaded"
        android:textSize="@dimen/txt_notify_title"
        android:layout_toRightOf="@id/img_notify_main"
        android:layout_marginLeft="@dimen/txt_notify_margin_left"/>
    <TextView
        android:id="@+id/txt_notify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Some text"
        android:textSize="@dimen/txt_notify_text"
        android:textColor="@color/notify_text"
        android:layout_toRightOf="@id/img_notify_main"
        android:layout_below="@id/txt_notify_title"
        android:layout_marginLeft="@dimen/txt_notify_margin_left"/>
    <ImageView
        android:id="@+id/img_notify_renew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_autorenew_black_18dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/img_notify_margin"/>


</RelativeLayout>